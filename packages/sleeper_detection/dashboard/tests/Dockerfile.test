# Test runner Docker image for Selenium tests
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    unzip \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY tests/requirements.test.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.test.txt

# Create directories for test artifacts
RUN mkdir -p /app/screenshots /app/baselines /app/ai_feedback /app/ai_analysis_results

# Copy all dashboard files for proper imports
COPY . /app/
# Copy test files specifically
COPY tests/ /app/tests/

# Set Python path to include app directory
ENV PYTHONPATH=/app:/app/tests
# Prevent Python from creating bytecode files
ENV PYTHONDONTWRITEBYTECODE=1

# Default command - run from /app directory
CMD ["python", "-m", "pytest", "/app/tests/test_selenium_e2e.py", "-v"]
