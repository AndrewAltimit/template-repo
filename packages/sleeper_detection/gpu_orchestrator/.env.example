# GPU Orchestrator Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secure-api-key-here

# CORS Settings
CORS_ORIGINS=http://localhost:8501,http://192.168.0.0/24

# Database
DATABASE_PATH=./orchestrator.db

# Docker Settings
DOCKER_COMPOSE_FILE=../docker/docker-compose.gpu.yml
SLEEPER_SERVICE_NAME=sleeper-eval-gpu

# Volume Paths (from docker-compose.gpu.yml)
MODELS_VOLUME=sleeper-models
RESULTS_VOLUME=sleeper-results
GPU_CACHE_VOLUME=sleeper-gpu-cache

# Job Settings
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT_SECONDS=3600
LOG_BUFFER_SIZE=10000

# Log Storage Settings
LOGS_DIRECTORY=./logs
LOG_RETENTION_DAYS=30

# Cleanup Settings
CLEANUP_OLD_JOBS_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# Job Deletion Settings
ALLOW_JOB_DELETION=true  # Set to false to disable manual job deletion
