# Include essential files
include README.md
include pyproject.toml
include setup.py

# Include package data
recursive-include economic_agents/configs *.yaml *.json

# Exclude common non-package directories
prune tests
prune docs
prune examples
prune logs

# Exclude generated/runtime directories
prune .pytest_cache
prune .mypy_cache
prune build
prune dist
prune *.egg-info
prune htmlcov

# Exclude cache and temporary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.swp
global-exclude *~
global-exclude .coverage
