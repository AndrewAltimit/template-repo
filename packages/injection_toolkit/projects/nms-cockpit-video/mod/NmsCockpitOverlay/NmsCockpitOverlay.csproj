<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <PlatformTarget>x64</PlatformTarget>
    <OutputType>Library</OutputType>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reloaded-II Mod Framework -->
    <PackageReference Include="Reloaded.Mod.Interfaces" Version="3.*" />
    <PackageReference Include="Reloaded.Memory.SigScan" Version="3.*" />
    <PackageReference Include="Reloaded.Hooks" Version="4.*" />

    <!-- Utility -->
    <PackageReference Include="System.IO.Pipes" Version="8.*" />
  </ItemGroup>

</Project>
