# User ID and Group ID for Docker containers
# Run 'id -u' to get your user ID and 'id -g' to get your group ID
# This ensures containers run with proper permissions
USER_ID=1000
GROUP_ID=1000

# GitHub Configuration
GITHUB_PROJECTS_TOKEN=your_github_classic_token_for_projects
GITHUB_TOKEN=your_github_personal_access_token

# Gemini AI Configuration
# No API key needed - uses CLI authentication
# Run 'gemini' command once to authenticate

# Optional: Remote Service URLs
COMFYUI_SERVER_URL=http://192.168.0.152:8189
AI_TOOLKIT_SERVER_URL=http://192.168.0.152:8190
# Gaea2 MCP Server URL (for remote Windows server with Gaea2 installed)
GAEA2_REMOTE_URL=http://192.168.0.152:8007

# Optional: Database Configuration
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=project_db

# Optional: Repository Configuration
GITHUB_REPOSITORY=owner/repo
WEBHOOK_URL=

# Optional: OpenRouter Configuration
OPENROUTER_API_KEY=

# Optional: Codex Configuration
# WARNING: Only set to true if running in a sandboxed VM or container
# Default (false) uses safe sandboxed mode with workspace-write restrictions
CODEX_BYPASS_SANDBOX=false

# Optional: ElevenLabs Configuration
ELEVENLABS_API_KEY=
# ELEVENLABS_DEFAULT_MODEL=eleven_v3  # Uncomment when v3 API access is available (Q3 2025)

# Optional: Video Editor Configuration
# Required for speaker diarization feature
# Get a token from https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# GPU device selection for multi-GPU systems (default: 0)
# Set to specific GPU index (0, 1, 2, etc.) or "all" for all GPUs
GPU_DEVICE=0
