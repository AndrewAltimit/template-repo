        "mcp-content-creation",
        "python",
        "-m",
        "mcp_content_creation.server",
        "--mode",
        "stdio"
      ]
    },
    "gemini": {
      "command": "docker compose",
      "args": [
        "-f",
        "./docker-compose.yml",
        "--profile",
        "services",
        "run",
        "--rm",
        "-T",
        "mcp-gemini",
        "mcp-gemini",
        "--mode",
        "stdio"
      ],
      "env": {
        "GEMINI_TIMEOUT": "300",
        "GEMINI_USE_CONTAINER": "false"
      }
    },
    "opencode": {
