{
  // OpenCode configuration for using custom company API endpoint
  // This version is for use inside Docker containers

  "$schema": "https://opencode.ai/config-schema.json",

  // Define our custom provider that points to the translation wrapper
  "provider": {
    "company-ai": {
      "name": "Company AI Gateway",
      // Use host.docker.internal to access host services from container
      // If this doesn't work, replace with your host's IP address
      "api": "http://host.docker.internal:8052/v1",
      "env": ["COMPANY_API_KEY"],
      "models": {
        "claude-3.5-sonnet": {
          "name": "Claude 3.5 Sonnet (Company)",
          "release_date": "2024-06-20",
          "attachment": true,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "cost": {
            "input": 3,
            "output": 15,
            "cache_read": 0.3,
            "cache_write": 3.75
          },
          "limit": {
            "context": 200000,
            "output": 8192
          }
        },
        "claude-3-opus": {
          "name": "Claude 3 Opus (Company)",
          "release_date": "2024-02-29",
          "attachment": true,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "cost": {
            "input": 15,
            "output": 75,
            "cache_read": 0,
            "cache_write": 0
          },
          "limit": {
            "context": 200000,
            "output": 4096
          }
        },
        "gpt-4": {
          "name": "GPT-4 (Company)",
          "release_date": "2023-03-14",
          "attachment": false,
          "reasoning": false,
          "temperature": true,
          "tool_call": true,
          "cost": {
            "input": 30,
            "output": 60,
            "cache_read": 0,
            "cache_write": 0
          },
          "limit": {
            "context": 128000,
            "output": 4096
          }
        }
      },
      "options": {
        // API key will be read from environment variable
        "apiKey": "mock-api-key-for-testing"
      }
    }
  },

  // Disable other providers to ensure we use our custom one
  "disabled_providers": [
    "openrouter",
    "anthropic",
    "openai"
  ],

  // Set default model to use our custom provider
  "model": "company-ai/claude-3.5-sonnet",

  // Optional: Set a smaller model for quick tasks
  "small_model": "company-ai/claude-3.5-sonnet"
}
