{
  "allowed_tools": [
    "write",
    "bash",
    "read",
    "edit",
    "multi_edit",
    "multiedit",
    "grep",
    "glob",
    "web_fetch",
    "webfetch",
    "web_search",
    "websearch",
    "todo",
    "task",
    "notebook_edit",
    "notebookedit",
    "ls",
    "view",
    "fetch"
  ],
  "tool_aliases": {
    "multiedit": "multi_edit",
    "webfetch": "web_fetch",
    "websearch": "web_search",
    "notebookedit": "notebook_edit",
    "view": "read",
    "ls": "bash",
    "fetch": "web_fetch"
  },
  "parser_config": {
    "max_json_size": 1048576,
    "max_tool_calls": 20,
    "log_errors": true,
    "strict_mode": false,
    "fail_on_parse_error": false
  },
  "production_config": {
    "fail_on_missing_config": true,
    "require_tool_validation": true,
    "log_unauthorized_tools": true
  },
  "api_spec": {
    "_comment": "Controls which tool API specification to use for request/response formatting",
    "default": "openai",
    "supported_specs": ["openai", "anthropic"],
    "spec_details": {
      "openai": {
        "description": "OpenAI Chat Completions API format",
        "tool_call_format": "tool_calls array with function objects",
        "tool_result_role": "tool",
        "finish_reason_tool": "tool_calls"
      },
      "anthropic": {
        "description": "Anthropic Messages API format",
        "tool_call_format": "content array with tool_use blocks",
        "tool_result_role": "user with tool_result content",
        "finish_reason_tool": "tool_use"
      }
    },
    "auto_detect": true,
    "auto_detect_rules": {
      "_comment": "Rules for auto-detecting API spec from request format",
      "anthropic_indicators": [
        "anthropic_version",
        "content[].type=='tool_result'",
        "system as string (not in messages)"
      ],
      "openai_indicators": [
        "tool_calls in messages",
        "role=='tool'",
        "function_call"
      ]
    }
  }
}
