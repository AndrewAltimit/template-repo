# CGT Validator Environment Variables
# Copy this file to .env and update with your values

# Environment
CGT_ENV=development

# Paths
CGT_DOWNLOADS_DIR=./downloads
CGT_REPORTS_DIR=./reports
CGT_LOGS_DIR=./logs

# Scraping settings
CGT_SCRAPER_DELAY=1.0
CGT_SCRAPER_TIMEOUT=30
CGT_SCRAPER_USER_AGENT="CGT-Validator/0.1.0"

# Validation settings
CGT_VALIDATION_STRICT_MODE=false
CGT_VALIDATION_MAX_ERRORS=100

# API settings (future)
CGT_API_HOST=0.0.0.0
CGT_API_PORT=5000
CGT_API_DEBUG=true

# Database settings (future)
CGT_DATABASE_URL=sqlite:///cgt_validator.db

# Email notifications (optional)
CGT_SMTP_HOST=smtp.example.com
CGT_SMTP_PORT=587
CGT_SMTP_USERNAME=
CGT_SMTP_PASSWORD=
CGT_SMTP_FROM=cgt-validator@example.com
CGT_SMTP_TO=admin@example.com

# Docker settings
COMPOSE_PROJECT_NAME=cgt-validator
DOCKER_BUILDKIT=1

# Testing
PYTEST_ADDOPTS="-v --tb=short"
COVERAGE_THRESHOLD=80

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
